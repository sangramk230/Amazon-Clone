package com.amazon.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.amazon.dao.UserAvailableProductDao;
import com.amazon.entity.AvailableProduct;


@Service
public class UserAvailableProductService {

	@Autowired
	private UserAvailableProductDao userAvailableProductDao;

	@Transactional
	public boolean saveUserProduct(AvailableProduct userProduct) {
		return userAvailableProductDao.saveUserProduct(userProduct);
	}

	@Transactional(readOnly = true)
	public AvailableProduct getUserProduct(Long id) {
		return userAvailableProductDao.getUserProduct(id);
	}
}
